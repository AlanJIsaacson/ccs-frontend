{% extends 'base.html.twig' %}

{% block header %}
    {% embed '/includes/header.html.twig' %}
        {% block bannerarea %}
        {% endblock %}
    {% endembed %}
{% endblock %}

{% block body %}

    <!-- required wrapper 1 -->
    <div class="govuk-width-container">

        <!-- If your design requires them, you should place components such as breadcrumbs, back link and phase banner inside this wrapper so that they sit directly underneath the header. -->

        <div class="govuk-phase-banner">
            <p class="govuk-phase-banner__content">
                <strong class="govuk-tag govuk-phase-banner__content__tag ">
                    beta </strong> <span class="govuk-phase-banner__text">
      This is a new service â€“ your
      <a class="govuk-link" href="https://www.smartsurvey.co.uk/s/QWDZX/">feedback</a> will help us to improve it.
    </span>
            </p>
        </div>

        <!-- required wrapper 2 -->
        <main id="main-content" role="main"  class="govuk-main-wrapper">

            <div class="govuk-grid-row">
                <div class="govuk-grid-column-three-quarters">

                    <h1 class="govuk-heading-xl page-title">Gated content test: Whitepaper</h1>

                    <p class="govuk-body-l">Complete the form below to download our whitepaper on Cloud Security.</p>

                    <!-- Symfony form -->
                    {{ form_start(form, {'class': 'govuk-!-width-three-quarters'}) }}

                        <div class="govuk-form-group">
                            {{ form_label(form.email, 'Email', {'label_attr': {'class': 'govuk-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'govuk-input'}}) }}
                            {{ form_errors(form.email) }}
                        </div>

                        <p>Here is our <a href="https://www.gov.uk/government/publications/crown-commercial-service-privacy-notice">privacy notice</a>.</p>

                        <div class="govuk-form-group">
                            {{ form_widget(form.submit, {'attr': {'class': '--gem-c-button govuk-!-font-size-18 govuk-!-font-weight-bold govuk-button'}}) }}
                        </div>

                    {{ form_end(form) }}

                </div>
            </div>


        </main>
    </div>

{% endblock %}
